# ============================================
# KICE 수학 문제 관리 시스템 환경 변수
# ============================================
# 이 파일을 .env로 복사한 후 실제 값을 입력하세요
# cp .env.example .env

# ============================================
# Supabase 설정 (필수)
# ============================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# ============================================
# Google Drive 설정 (필수)
# ============================================
# Google Cloud Console에서 OAuth 2.0 클라이언트 ID 생성
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# 감시할 Google Drive 폴더 ID
# 폴더 URL: https://drive.google.com/drive/folders/FOLDER_ID
GOOGLE_DRIVE_FOLDER_ID=1xEaZ3p2odrzPHWy54URkh0lA-dn_oEA8

# 변환된 이미지 저장할 폴더 ID (선택)
GOOGLE_DRIVE_OUTPUT_FOLDER_ID=

# ============================================
# Notion 설정 (필수)
# ============================================
# https://www.notion.so/my-integrations 에서 생성
NOTION_TOKEN=secret_your-notion-integration-token

# 수학 문제 관리 데이터베이스 ID
# 데이터베이스 URL: https://www.notion.so/DATABASE_ID?v=...
NOTION_DATABASE_ID=your-database-id

# ============================================
# 로컬 저장 경로 설정
# ============================================
# PDF 다운로드 임시 폴더
DOWNLOAD_PATH=./downloads

# 변환된 이미지 저장 폴더
OUTPUT_PATH=./output

# ============================================
# 카카오 설정 (선택 - 알림 발송용)
# ============================================
KAKAO_REST_API_KEY=your-rest-api-key
KAKAO_REDIRECT_URI=http://localhost:8000/auth/kakao/callback
KAKAO_ACCESS_TOKEN=your-access-token
KAKAO_REFRESH_TOKEN=your-refresh-token
KAKAO_CHANNEL_ID=your-channel-id
KAKAO_SENDER_KEY=your-sender-key

# ============================================
# 알림톡 NHN Cloud (선택 - 유료)
# ============================================
NHN_ALIMTALK_APP_KEY=your-app-key
NHN_ALIMTALK_SECRET_KEY=your-secret-key

# ============================================
# 개발 설정
# ============================================
# 로그 레벨: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# 디버그 모드 (True/False)
DEBUG=False
